<?xml version="1.0" encoding="utf-8"?>
    <!-- Begin Full Vertical Layout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.vindictuscharacter.MainActivity"
        >
    <!-- Banner Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_banner_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/sylas4"
        android:layout_alignParentTop="true" />

    <!-- Begin the row with 2 columns layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_medium_padding"
        >
        <!-- Begin Game Class Column -->
        <LinearLayout
            android:layout_width="@dimen/activity_null_dp_size"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/col1Title"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/fullDark"
                android:fontFamily="sans-serif-light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/className"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classNamevalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classGender"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classGendervalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classType"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classTypevalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classWeapon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classWeaponvalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classRange"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classRangevalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classDpsTier"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/classDpsTiervalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

        </LinearLayout>
        <!-- End Game Class Column -->

        <!-- Begin My Character Column -->
        <LinearLayout
            android:layout_width="@dimen/activity_null_dp_size"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/col2Title"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/fullDark"
                android:fontFamily="sans-serif-light"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charName"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charNamevalue"
                    android:textColor="@color/fullDark"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charLevel"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charLevelvalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charGuild"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charGuildvalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charRank"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charRankvalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charPower"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charPowervalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_small_padding"
                android:paddingBottom="@dimen/activity_small_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charTech"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/charTechvalue"
                    android:textColor="@color/fullDark"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- End My Character Column -->

    </LinearLayout>
        <!-- End the row with 2 columns layout -->
        <!-- Begin Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:paddingRight="@dimen/activity_medium_padding"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="@dimen/activity_null_dp_size"
                android:layout_height="wrap_content"
                android:src="@drawable/udacity"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="@dimen/activity_null_dp_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/studentName"
                android:textSize="@dimen/activity_text_small"
                android:textAlignment="center"
                android:gravity="center_vertical"
                />

        </LinearLayout>
        <!-- End Footer -->
    </LinearLayout>
    <!-- End Vertical Layout -->

